<!DOCTYPE html>
<html>
<title>Let's start</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<style>
  body,
  h1,
  h5 {
    font-family: "Raleway", sans-serif
  }

  html,
  body {
    height: 100%
  }

  .bgimg {
    background-image: url('https://images.pexels.com/photos/450035/pexels-photo-450035.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260');
    max-width: 100%;
    height: auto;
    min-height: 100%;
    background-position: center;
    background-size: cover;
  }
</style>

<body>

  <div class="bgimg w3-display-container w3-text-white">
    <div class="w3-display-topmiddle w3-jumbo">
      <p>Share Your Course.</p>
    </div>
    <div class="w3-display-middle w3-container w3-round-large">
      <p><button class="w3-button w3-border w3-hover-black w3-round"
          onclick="document.getElementById('login').style.display='block'">Login</button></p>
      <p><button class="w3-button w3-border w3-hover-black w3-round"
          onclick="document.getElementById('signup').style.display='block'">Signup</button></p>
          <% if (message.length > 0) { %>
            <p class="w3-text-red w3-large"><%= message %></p>
          <% } %>
          <% if (messages.length > 0) { %>
           <p class="w3-text-red w3-large"><%= messages %></p>
          <% } %>
    </div>
    <div class="w3-display-bottomleft w3-container">
      <p class="w3-xlarge">Mazilu Eduard Florian</p>
    </div>
  </div>

  <!-- Login Modal -->
  <div id="login" class="w3-modal">
    <div class="w3-modal-content w3-animate-zoom " style="max-width:600px">
      <div class="w3-center w3-black">
        <span onclick="document.getElementById('login').style.display='none'"
          class="w3-button w3-xlarge w3-display-topright" title="Close Modal">&times;</span>
        <h1 class="w3-center">Login</h1>
      </div>

      <form action="/login" method="post" class="w3-container">
        <div class="w3-section">
          <label><b>Email</b></label>
          <input class="w3-input w3-border w3-margin-bottom" type="email" placeholder="Enter email" name="email"
            required>
          <label><b>Password</b></label>
          <input class="w3-input w3-border" type="password" placeholder="Enter Password" name="password" required>
          <button class="w3-button w3-block w3-green w3-section w3-padding w3-round" type="submit">Login</button>
          <p class="w3-center"> or </p>
          <button
            onclick="document.getElementById('login').style.display='none', document.getElementById('signup').style.display='block'"
            type="button" class="w3-button w3-block w3-black w3-round">Signup</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Signup Modal -->
  <div id="signup" class="w3-modal">
    <div class="w3-modal-content w3-animate-zoom" style="max-width:600px;">
      <div class="w3-center w3-black">
        <span onclick="document.getElementById('signup').style.display='none'"
          class="w3-button w3-display-topright w3-xlarge">x</span>
        <h1 class="w3-center">Signup</h1>
      </div>
      <div class="w3-container">
        <form onsubmit="return validation()" action="/signup" method="post">
          <p> <label>Full name</label>
            <input class="w3-input w3-border w3-round-large" type="text" name="name" id="name" required>
            <span id="nameerror" class="w3-text-red "> </span>
          </p>
          <p> <label>Email</label>
            <input class="w3-input w3-border w3-round-large" type="email" name="email" id="email" required>
          </p>
          <p> <label>Password</label>
            <input class="w3-input w3-border w3-round-large" type="password" name="password" id="password" required>
            <span id="passworderror" class="w3-text-red"> </span>
          </p>
          <p> <label>University</label>
            <input class="w3-input w3-border w3-round-large" type="text" name="uni" id="uni" required>
            <span id="unierror" class="w3-text-red"> </span>
          </p>
          <p> <label>Job</label>
            <input class="w3-input w3-border w3-round-large" type="text" name="job" id="job" required>
            <span id="joberror" class="w3-text-red"> </span>
          </p>
          <p> <label>Phone Number</label>
            <input class="w3-input w3-border w3-round-large" type="text" name="phone" id="phone" required>
            <span id="phoneerror" class="w3-text-red"> </span>
          </p>
          <p><button class="w3-button w3-right w3-large w3-black w3-round" type="submit">Signup</button></p>
        </form>
      </div>
    </div>
  </div>
  <script type="text/javascript">


    function validation() {

      var user = document.getElementById('name').value;
      var pass = document.getElementById('password').value;
      var uni = document.getElementById('uni').value;
      var job = document.getElementById('job').value;
      var mobileNumber = document.getElementById('phone').value;

      if (user.length > 60) {
            document.getElementById('nameerror').innerHTML = "Name must contain less than 60 characters";
            return false;
      }
      if (!isNaN(user)) {
        document.getElementById('nameerror').innerHTML = "Only characters are allowed";
        return false;
      }
      if ((pass.length < 5) || (pass.length > 20)) {
        document.getElementById('passworderror').innerHTML = "Passwords lenght must be between 5 and 20 characters";
        return false;
      }
      if (uni.length > 60) {
        document.getElementById('unierror').innerHTML = "Name must contain less than 60 characters";
        return false;
      }
      if (job.length > 60) {
        document.getElementById('joberror').innerHTML = "Name must contain less than 60 characters";
        return false;
      }
      if (isNaN(mobileNumber)) {
        document.getElementById('phoneerror').innerHTML = "Mobile number must contain only digits";
        return false;
      }
      if (mobileNumber.length != 10) {
        document.getElementById('phoneerror').innerHTML = "Mobile number must be 10 digits only";
        return false;
      }
    }

  </script>
</body>

</html>