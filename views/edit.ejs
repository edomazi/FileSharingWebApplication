<!doctype html>
<html>

<head>
    <title>Edit profile</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 20px;
        }
    </style>


    <script type="text/JavaScript">

        function validation(){

        var user = document.getElementById('editname').value;
        var mobileNumber = document.getElementById('editphone').value;

        if(!isNaN(user)){
            document.getElementById('name').innerHTML ="Only characters are allowed";
            return false;
        } 
        if(isNaN(mobileNumber)){
            document.getElementById('phone').innerHTML ="Mobile number must contain only digits";
            return false;
        }
        if(mobileNumber.length!=10){
            document.getElementById('phone').innerHTML ="Mobile number must be 10 digits only";
            return false;
        }
        }
    </script>
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> Edit</h1>

            <form onsubmit="return validation()" action="/edit" method="post">
                <div class="form-group">
                    <label>Full name</label>
                    <input type="text" class="form-control" name="editname" id="editname" value="<%- userData.name %>" required />
                    <span id="name" class="w3-text-red"> </span>
                </div>
                <div class="form-group">
                    <label>University</label>
                    <input type="text" class="form-control" name="edituni" id="edituni" value="<%- userData.university %>" required/>
                </div>
                <div class="form-group">
                    <label>Job</label>
                    <input type="text" class="form-control" name="editjob" id="editjob" value="<%- userData.job %>" required/>
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" name="editphone" id="editphone" value="<%- userData.phone %>" required/>
                    <span id="phone" class="w3-text-red"> </span>
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Edit</button>
            </form>

            <hr>

        </div>
    </div>
</body>

</html>